    <script src="https://unpkg.com/mapkick@0.1.1/dist/mapkick.js"></script>
    
<html>
<body>
        <%if current_user.supervisor? %>
            <table>
                <tr>
                    <th> Marca </th>
                    <th> Modelo </th>
                    <th> Descripción </th>
                    <th> Estado </th>
                    <th> Alquilado </th>
                </tr>
                <% @autos.each do |a| %>
                    <tr>
                        <td> <%= link_to a.marca, a %> </td>
                        <td> <%= a.modelo %> </td>
                        <td> <%= a.descripcion %> </td>
                        <% if a.en_servicio %> 
                            <td> En servicio </td>
                        <% else %> 
                            <td> Fuera de servicio </td>
                        <% end %> 
                        <%if a.alquilado%>
                            <td> Alquilado </td>
                        <%else%>
                            <td> No alquilado </td>
                        <%end%>
                    </tr>
                <%end%>
            </table>
        <%end%>

        <% if current_user.admin? %>
            <%= link_to "Agregar auto", new_auto_path%>
            <table>
                <tr>
                <th> Marca </th>
                <th> Modelo </th>
                <th> Descripción </th>
                <th> Estado </th>
                </tr>
                <% @autos.each do |a| %>
                    <tr>
                        <td> <%= link_to a.marca, a %> </td>
                        <td> <%= a.modelo %> </td>
                        <td> <%= a.descripcion %> </td>
                        <% if a.en_servicio %> 
                            <td> En servicio </td>
                        <% else %> 
                            <td> Fuera de servicio </td>
                        <% end %> 
                </tr>
                <%end%>
            </table>
        <%end %>



        <% if current_user.usuario? %>
            <table>
                <tr>
                    <th>Nombre</th>
                    <th>Descripción</th>
                </tr>       
                
                <script>
                let pos = []
                </script>

                <% @autos.each do |a| %>
                    <% if a.alquilado==false && a.en_servicio == true   %>
                        <tr>
                            <script>pos.unshift({
                                latitude: <%= a.location_point_x %>,
                                longitude: <%= a.location_point_y %>,
                                tooltip: '<%= a.marca %>'
                                })</script>
                            <% @cantidad = @cantidad + 1 %>
                            <td><%= a.marca %></td>
                            <td><%= a.modelo %></td>
                            <td> <%= link_to "DETALLES" , a%>
                        </tr>
                    <%end%>
                <%end%>

                <div id="map" style="height: 400px"></div>
                
                <script>
                new Mapkick.Map("map", pos);
                </script>                

                
            </table>

                <% if @cantidad == 0  %>
                    <h1> no hay autos disponibles en este momento </h1> 
                <% end %>
            
        <% end %>
    
</body>
</html>